if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

[[ ! -f $XDG_CONFIG_HOME/zsh/p10k.zsh ]] || source $XDG_CONFIG_HOME/zsh/p10k.zsh


export HISTFILE="$XDG_CONFIG_HOME/zsh/.zsh_history"
export ZDOTDIR="${XDG_CONFIG_HOME}/zsh"
export ZSH="$XDG_CONFIG_HOME/zsh/oh-my-zsh"
export ZSH_CUSTOM="$ZSH/custom"
ZSH_THEME=powerlevel10k/powerlevel10k

plugins=(git pip command-not-found copypath copyfile web-search macos zsh-syntax-highlighting zsh-autosuggestions zsh-autocomplete)

## ohmyzsh config
source $ZSH/oh-my-zsh.sh

#### CUSTOM CONFIGURATIONS ####

## ALIASSES ##
alias ll='ls -lh'
alias lla='ls -lha'



## CUSTOM KEY BINDINGS ##
bindkey "[D" backward-word
bindkey "[C" forward-word
bindkey "^[a" beginning-of-line
bindkey "^[e" end-of-line


####
## MAC configuration
####
alias oasis="/Users/thomas/github/oasis"
alias config="/Users/thomas/github/config"
alias code='code-insiders'

## git keepass integration
alias gl="git pull"
alias gp="git push"
alias oasisgl="oasis && gl"

alias gitstatus="cd $HOME/github/ && $HOME/github/config-station/scripts/git/mgitstatus.sh && cd -"


SSH_AUTH_SOCK=~/.config/strongbox/agent.sock

####
## VIM configuration
####
# set neovim as default editor
alias vim="nvim"
alias vi="nvim"

export VISUAL=nvim;
export EDITOR=nvim;

####
## FZF configuration
####
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
source "${XDG_CONFIG_HOME}/fzf/fzf.zsh"


####
## pyenv configuration
####
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# Automatically attach to a default tmux session named 'main', or create it if it doesn't exist
if command -v tmux &> /dev/null && [ -z "$TMUX" ]; then
    tmux attach -t main || tmux new -s nmain
fi

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# To customize prompt, run `p10k configure` or edit ~/.config/zsh/p10k.zsh.
[[ ! -f ~/.config/zsh/p10k.zsh ]] || source ~/.config/zsh/p10k.zsh
